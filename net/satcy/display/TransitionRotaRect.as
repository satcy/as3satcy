package net.satcy.display{	import flash.display.*;	import caurina.transitions.Tweener;	public class TransitionRotaRect extends Sprite{		private var rt:*;		private var mc_0:*;		private var mc_1:*;		private var mask_mc:Shape;		private var duration:Number;				public function TransitionRotaRect(_rt:*, _mc_0:*, _mc_1:*, _duration:Number){			rt = _rt;			mc_0 = _mc_0;			mc_1 = _mc_1;			duration = _duration;						mask_mc = new Shape();			mask_mc.graphics.beginFill(0x000000, 1);			mask_mc.graphics.drawRect(-50,-50,100,100);			mask_mc.graphics.endFill();						addChild(mask_mc);						//mc_1.visible = false;			startTransition();		}				public function startTransition(){			var zero_depth:int = rt.getChildIndex(mc_0);			var one_depth:int = rt.getChildIndex(mc_1);						if(zero_depth > one_depth){				appearOne();			}else{				appearZero();			}					}		private function appearZero():void{						rt.swapChildren(mc_1, mc_0);			mc_1.mask = null;			mc_0.mask = mask_mc;						mask_mc.width = 0;			mask_mc.height = 0;												mask_mc.x = mc_0.x+mc_0.width*0.5;			mask_mc.y = mc_0.y+mc_0.height*0.5;						mask_mc.rotation = 180;						Tweener.addTween(mask_mc, {width:mc_0.width, height:mc_0.height, rotation:0, time:duration, transition:"liner"});														}		private function appearOne():void{						rt.swapChildren(mc_0, mc_1);			mc_0.mask = null;			mc_1.mask = mask_mc;						mask_mc.width = 0;			mask_mc.height = 0;												mask_mc.x = mc_1.x+mc_1.width*0.5;			mask_mc.y = mc_1.y+mc_1.height*0.5;									mask_mc.rotation = 180;						Tweener.addTween(mask_mc, {width:mc_1.width, height:mc_1.height, rotation:0, time:duration, transition:"liner"});					}	}	}