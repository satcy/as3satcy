package net.satcy.display{	import flash.display.*;	public class StripMaker extends Sprite{		private var bmd:BitmapData;		public function StripMaker(){			  		}		public function draw(_w:uint, _h:uint, sw:uint, ow:uint, rota:Number, f_col:uint, b_col:uint){			removeDisplayChildren(this);									if(bmd != null){				bmd.dispose();			}			var gra = this.graphics;			gra.beginFill(b_col, 1);			gra.drawRect(0, 0, _w, _h);			gra.endFill();						var counter:int = ow;			if(rota>0){				counter -= _w*(Math.abs(1/tan(rota)));							}			var max_num:int = Math.ceil(_w/(sw+ow)*(Math.abs(1/tan(rota))+1));			//trace(max_num);				  			for(var i:int = 0;i<max_num;i++){				//trace(counter);				gra.beginFill(f_col, 1);				gra.moveTo(counter, 0);				gra.lineTo(counter+sw, 0);				gra.lineTo(counter + tan(rota)*_h +sw, _h);				gra.lineTo(counter + tan(rota)*_h, _h);				gra.endFill();				counter += (sw+ow);			}			bmd = new BitmapData(_w, _h, false, 0x000000);			bmd.draw(this);			gra.clear();			var bm:Bitmap = new Bitmap(bmd, "auto", true);						addChild(bm); 		}		public function destroy():void{			removeDisplayChildren(this);			bmd.dispose();					}		private function removeDisplayChildren(_mc:*):void{			var mc:* = _mc;			var c_num:int = mc.numChildren;			if(c_num>0){				for(var i:int = 0;i<c_num;i++){					mc.removeChildAt(0);				}			}		}				private function tan(rota:Number):Number{			return Math.tan(Math.PI/180*rota);		}		   					}		}