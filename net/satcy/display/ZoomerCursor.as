package net.satcy.display{	import flash.display.*;	import flash.events.*;	import flash.ui.*;	import net.satcy.display.Zoomer;	public class ZoomerCursor extends Sprite {				private var icn_arrow:BitmapData;		private var icn_min:BitmapData;		private var icn_max:BitmapData;		private var bm:Bitmap;				public function ZoomerCursor(arrow_link:BitmapData,min_link:BitmapData,max_link:BitmapData){			icn_arrow = arrow_link;			icn_min = min_link;			icn_max = max_link;						bm = new Bitmap(icn_max);			bm.x = -200;			addChild(bm);			bm.visible = false;						addEventListener(Event.REMOVED_FROM_STAGE, removed);		}		public function zoomerOver():void{			Mouse.hide();			bm.visible = true;			addEventListener(Event.ENTER_FRAME, enterframeHandler, false, 0, true);		}		public function zoomerOut():void{			Mouse.show();			bm.visible = false;			removeEventListener(Event.ENTER_FRAME, enterframeHandler);		}		public function zoomerIcnChage(_id:int):void{			removeChild(bm);			bm = null;						if(_id == 0) bm = new Bitmap(icn_max);			if(_id == 1) bm = new Bitmap(icn_min);			if(_id == 2) bm = new Bitmap(icn_arrow);			bm.x = -200;			addChild(bm);			bm.visible = true;		}		private function enterframeHandler(e:Event):void{			bm.x = mouseX;			bm.y = mouseY;		}				private function removed(e:Event):void{			icn_arrow.dispose();			icn_min.dispose();			icn_max.dispose();			if(numChildren>0){				removeChildAt(0);			}			bm = null			removeEventListener(Event.REMOVED_FROM_STAGE, removed);			removeEventListener(Event.ENTER_FRAME, enterframeHandler);			delete this;			Mouse.show();		}	}	}