package net.satcy.bitmap{	import flash.display.*;	public class BitmapPattarner extends Sprite{				public function BitmapPattarner(_w:int, _h:int, _offset_x:int, _offset_y:int, _slide_x:int, _color:uint){			var bmd:BitmapData = new BitmapData(_w, _h, true, 0x00000000);									var lwidth:int = Math.ceil(_w/_offset_x);			var lheight:int = Math.ceil(_h/_offset_y);									for(var i:int = 0; i<lheight; i++){								for(var j:int = 0; j<lwidth; j++){										var sel:int = i%2;					var set_x:int = j*_offset_x;					if(sel == 0){						set_x += _slide_x;					}					bmd.setPixel32(set_x, i*_offset_y, _color);									}							}									var bm:Bitmap = new Bitmap(bmd);						addChild(bm);		}					}			}