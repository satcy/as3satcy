package net.satcy.util{    import flash.events.Event;	import flash.utils.clearInterval;	import flash.utils.setTimeout;	import net.satcy.util.LayOutUtil;	/*		@Author satoshi@rhizomatiks.com		@discription stageのリサイズイベントのラッパー		@discription LayOutUtilとセットで使う。		@see LayOutUtil	*/    public class LayOutResize{				private var resize_func:Function = nullFunc;		private var interval:uint;		        public function LayOutResize(fn:Function) {			resize_func = fn;            LayOutUtil.stage.addEventListener(Event.RESIZE, resizeHandler, false, 0, true);			clearInterval(interval);        }		private function onCompleteHandler(event:Event):void{		}        private function activateHandler(event:Event):void {        }        private function resizeHandler(event:Event):void {        	resize_func();            //clearInterval(interval);			//interval = setTimeout(resizeEnd, 30);        }		private function resizeEnd():void{			if(resize_func != null) resize_func();		}		public function destroy():void{			LayOutUtil.stage.removeEventListener(Event.RESIZE, resizeHandler);									clearInterval(interval);						resize_func = null;			delete this;		}		private function nullFunc():void{}    }}